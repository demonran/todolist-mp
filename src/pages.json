{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "打卡",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/todolist/index",
      "style": {
        "navigationBarTitleText": "任务"
      }
    },
    {
      "path": "pages/share/index",
      "style": {
        "navigationBarTitleText": "快来看看我的打卡"
      }
    },
    {
      "path": "pages/todolist/add",
      "style": {
        "navigationBarTitleText": "添加任务"
      }
    },
    {
      "path": "pages/tools/index",
      "style": {
        "navigationBarTitleText": "外部链接"
      }
    },
    {
      "path": "pages/score-card/index",
      "style": {
        "navigationBarTitleText": "记分卡"
      }
    }
  ],
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "打卡"
      },
      {
        "pagePath": "pages/todolist/index",
        "text": "任务"
      },
      {
        "pagePath": "pages/score-card/index",
        "text": "记分卡"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  }
}
